# FilmFind Environment Configuration
# Copy this file to .env and fill in your values

# TMDB API (Required)
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# LLM Provider (Required for search)
# Options: 'groq' or 'ollama'
LLM_PROVIDER=groq

# Groq API (Required if using LLM_PROVIDER=groq)
# Get your API key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Ollama (Optional - for local LLM)
# Only needed if using LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Cache Settings
CACHE_ENABLED=true

# Background Jobs
# Set to true to enable automatic data updates
ENABLE_BACKGROUND_JOBS=false

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
